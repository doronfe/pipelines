pipeline{
    agent {label 'workers'}
    stages{
        stage('Spellcheck'){
            steps{
                echo '[Main pipeline]: Check Spelling...'
                build job: 'Spellcheck_Pipeline'
            }
        }
        stage('Linter'){
            steps{
                echo '[Main pipeline]: Check shell scripts...'
                build job: 'Linter_Pipeline'
            } 
        }
        stage('Test'){
            steps{
                echo '[Main pipeline]: Testing...'
                build job: 'Test_pipeline'
            }
        }
        stage('Build'){
            steps{
                echo 'Building the Project'
            }
        }

        }

}
